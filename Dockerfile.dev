# Development Dockerfile
FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
# Install all dependencies (including dev)
RUN npm ci

# Install Chromium and dependencies for Puppeteer
RUN apk add --no-cache \
    chromium \
    nss \
    freetype \
    harfbuzz \
    ca-certificates \
    ttf-freefont

# Copy config
COPY tsconfig.json ./

# Expose port
EXPOSE 3000

# Default command for development
CMD ["npm", "run", "dev"]